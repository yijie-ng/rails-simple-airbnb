<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to "Complicated Airbnb", flats_path, class: "navbar-brand'" %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="ml-auto flex">
      <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" name="query" type="search" placeholder="Search" aria-label="Search" value=<%= @search %>>
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
      <%= link_to "Create new", new_flat_path, class: "btn btn-outline-primary" %>
    </div>
  </div>
</nav>

<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <p>All <%= @flats.count %> flats.</p>
    </div>
  </div>

  <% @flats.each do |flat| %>
    <div class="row">
      <div class="col 4">
        <div class="flat-card">
          <div class="flat-card-image">
          </div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex">
                <i class="material-icons mr-2">people</i><span><%= flat.number_of_guests %></span>
              </div>
              <div class="flex ml-3">
                <i class="material-icons mr-2">euro_symbol</i> <%= flat.price_per_night %>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to "More Info", flat_path(flat) %>
            <%= link_to "Edit", edit_flat_path(flat), class:"ml-3 text-warning" %>
            <%= link_to "Destroy", flat_path(flat), method: :delete, data: { confirm: "Are you sure?" }, class:"ml-3 text-danger" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

</div>
