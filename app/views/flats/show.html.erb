<%= render :partial => "navbar" %>
<div class="banner" style="background-image: url('<%= @flat.picture_url %>')"></div>

<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="card flat-show-card bg-light mb-3">
        <div class="card-body">
          <h1 class="card-title"><%= @flat.name %></h1>
          <p class="card-text flat-show-address mb-4"><%= @flat.address %></p>
        </div>
      </div>

      <div class="card flat-show-card bg-light mb-3">
        <div class="card-body">
          <h3 class="card-title">A bit more about this flat...</h3>
          <p class="card-text"><%= @flat.description %></p>
        </div>
      </div>
    </div>

    <div class="col-4">
      <div class="card flat-show-card bg-light mb-3">
        <div class="card-body">
          <h5 class="card-title">Book this place!</h5>
          <form>
            <div class="input-group mb-2">
              <div class="input-group-prepend">
                <div class="input-group-text">From:</div>
              </div>
              <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="11/11/2021">
            </div>

            <div class="input-group mb-2">
              <div class="input-group-prepend">
                <div class="input-group-text">To:</div>
              </div>
              <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="17/11/2021">
            </div>
            <button type="submit" class="btn btn-success mb-2" style="width: 100%">Book</button>
          </form>
        </div>
      </div>

      <div class="card flat-show-card bg-light mb-3">
        <div class="card-body">
          <h3 class="card-title">Details</h3>

          <div class="d-flex justify-content-start">
            <div class="d-flex justify-content-start">
              <i class="material-icons mr-2">people</i>
              <span><%= @flat.number_of_guests %></span>
            </div>

            <div class="d-flex ml-3">
              <i class="material-icons mr-2">euro_symbol</i>
              <%= @flat.price_per_night %>
            </div>
          </div>
        </div>
      </div>

      <div class="card flat-show-card bg-light mb-3">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <h6>Share</h6>
            <div class="d-flex">
              <i class="fa fa-facebook-square fa-2x mr-2"></i>
              <i class="fa fa-twitter-square fa-2x mr-2"></i>
              <i class="fa fa-pinterest-square fa-2x mr-2"></i>
              <i class="fa fa-envelope-square fa-2x mr-2"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
